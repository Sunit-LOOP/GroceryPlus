<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/paymentItemId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Payment #12345"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/paymentItemStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Success"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#4CAF50" />

        </LinearLayout>

        <TextView
            android:id="@+id/paymentItemOrderId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order #67890"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/paymentItemCardholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cardholder: John Doe"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/paymentItemDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2023-05-15 14:30:00"
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/paymentItemAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹24.99"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>