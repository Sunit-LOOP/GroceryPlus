<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/productImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/splash_logo" />

        <!-- Product Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Product Title -->
            <TextView
                android:id="@+id/productTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <!-- Product Brand -->
            <TextView
                android:id="@+id/productBrandTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brand Name"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <!-- Price and Discount -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/productPriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹0.00"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50" />

                <TextView
                    android:id="@+id/productDiscountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0% OFF"
                    android:textSize="14sp"
                    android:textColor="#FF5722"
                    android:layout_marginStart="8dp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Weight/Unit -->
            <TextView
                android:id="@+id/productWeightTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weight: 1 kg"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <!-- Expiry Date -->
            <TextView
                android:id="@+id/productExpiryTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expires: 2025-12-31"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <!-- Description -->
            <TextView
                android:id="@+id/productDescriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product description goes here..."
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginBottom="8dp" />

            <!-- Organic/Fresh Tags -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/organicChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Organic"
                    android:visibility="gone"
                    style="@style/Widget.MaterialComponents.Chip.Action" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/freshChip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fresh"
                    android:layout_marginStart="8dp"
                    android:visibility="gone"
                    style="@style/Widget.MaterialComponents.Chip.Action" />

            </LinearLayout>

            <!-- Country of Origin -->
            <TextView
                android:id="@+id/productOriginTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Origin: India"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <!-- Rating -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <RatingBar
                    android:id="@+id/productRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="0.5"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/productRatingCountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(0 reviews)"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addToCartButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Add to Cart"
                    android:layout_marginEnd="8dp"
                    app:backgroundTint="#4CAF50" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/favoriteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="♥"
                    app:backgroundTint="#FFC107" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>