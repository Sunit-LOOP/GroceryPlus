<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp"
                android:layout_marginBottom="-20dp">
                
                <ImageView
                    android:id="@+id/productDetailImageIv"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/product_icon"
                    android:contentDescription="Product Image" />
                    
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/productDetailNameTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Product Name"
                        android:textSize="24sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#212121"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:id="@+id/productDetailCategoryTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:textSize="14sp"
                        android:textColor="#757575"
                        android:layout_marginTop="4dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="24dp">
                        
                        <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Quantity"
                           android:textSize="16sp"
                           android:fontFamily="sans-serif-medium"
                           android:textColor="#212121"/>
                           
                        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>   

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/rounded_gray_background">
    
                            <ImageButton
                                android:id="@+id/productDetailDecreaseBtn"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_remove"
                                android:padding="10dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Decrease"
                                app:tint="#757575"/>
    
                            <TextView
                                android:id="@+id/productDetailQuantityTv"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textSize="18sp"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="center"
                                android:textColor="#212121"/>
    
                            <ImageButton
                                android:id="@+id/productDetailIncreaseBtn"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_add"
                                android:padding="10dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Increase"
                                app:tint="#757575"/>
    
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="#212121"
                        android:layout_marginTop="32dp"/>

                    <TextView
                        android:id="@+id/productDetailDescriptionTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Product description goes here. It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout."
                        android:textSize="16sp"
                        android:textColor="#616161"
                        android:layout_marginTop="8dp"
                        android:lineSpacingExtra="6dp" />
                        
                    <!-- Space for bottom bar -->
                    <View android:layout_width="match_parent" android:layout_height="80dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

    <!-- Sticky Bottom ACTION Bar -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="16dp"
        app:cardCornerRadius="0dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Price"
                    android:textSize="12sp"
                    android:textColor="#757575"/>
                    
                <TextView
                    android:id="@+id/productDetailPriceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. 0.00"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="#4CAF50" />
            </LinearLayout>
            
            <Button
                android:id="@+id/productDetailAddToCartBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to Cart"
                android:textSize="16sp"
                android:paddingHorizontal="32dp"
                android:paddingVertical="12dp"
                app:cornerRadius="24dp"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"/>
            
        </LinearLayout>
        
    </com.google.android.material.card.MaterialCardView>

    <!-- Original Nav - Removed or kept? Usually detail screen doesn't have bottom nav, it has Add to Cart. 
         But file had it. I will REMOVE bottom nav from Detail Screen as it's a leaf node. 
         Wait, user might want to go back home. But standard is back button. 
         I will Remove bottom nav to focus on purchase. -->
    
</LinearLayout>