<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.osmdroid.views.MapView
        android:id="@+id/vendorMap"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/vendorMapToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#99FFFFFF"
        app:title="Nearby Vendors"
        app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/vendorInfoCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/vendorIconIv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/supplier_icon"
                android:scaleType="centerInside" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:id="@+id/vendorNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vendor Name"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/vendorAddressTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/vendorRatingTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating: 4.5"
                    android:textColor="#FFC107"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <Button
                android:id="@+id/visitVendorBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visit"
                android:layout_gravity="center_vertical"
                android:backgroundTint="#00C853"
                app:cornerRadius="8dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>
