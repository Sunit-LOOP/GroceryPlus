<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search &amp; Sort Algorithm Demo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/resultsTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Running demonstrations..."
            android:textSize="14sp"
            android:textColor="#333333"
            android:lineSpacingExtra="4dp"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="2dp"
            android:radius="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Algorithms Implemented:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Binary Search - O(log n) time complexity for sorted data\n• Fuzzy Search - Handles typos and partial matches using Levenshtein distance\n• Merge Sort - Stable O(n log n) sorting algorithm for product names\n• Quick Sort - Average O(n log n) sorting algorithm for prices\n• Multi-criteria Sorting - Sort by rating, category, and other combinations"
            android:textSize="14sp"
            android:textColor="#555555"
            android:lineSpacingExtra="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Performance Benefits:"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1A1A1A"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Fast search operations even with large product catalogs\n• Efficient sorting for better user experience\n• Smart fuzzy matching handles user typos\n• Multiple sorting options for different user preferences\n• Stable algorithms that maintain data integrity"
            android:textSize="14sp"
            android:textColor="#555555"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

</ScrollView>